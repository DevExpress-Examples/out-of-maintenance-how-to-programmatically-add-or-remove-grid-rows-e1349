<Window x:Class="AddDeleteRow.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Title="Use Delete and Insert keys to remove or add rows" Height="300" Width="450">
	<DockPanel LastChildFill="True">
		<dxg:GridControl x:Name="grid">
			<dxg:GridControl.View>
				<dxg:TableView x:Name="view" />
			</dxg:GridControl.View>
			<dxg:GridControl.Columns>
				<dxg:GridColumn FieldName="Text" />
				<dxg:GridColumn FieldName="Number" />
			</dxg:GridControl.Columns>
		</dxg:GridControl>
	</DockPanel>
</Window>
